@page
@model AcoesWeb.Pages.Posicao.EditModel
@{
    ViewData["Title"] = "Editar Posição";
}

<div>
	<div>
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="modal-title"><strong>Editar Posição</strong></h3>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-4 item_img">
						<img src=" " class="img-responsive">
					</div>
					<div class="col-md-8 item_content">
						<form method="post">
							<h4>
								<span>Atualize os dados da posição !!!</span>
							</h4>
							<div class="container">
								<div class="row">
									<div class="col-md-4">
										<div class="panel">
											<div class="panel-body">
												<div class="col-md-12" style="margin-top:15px;">
													<input asp-for="posicao.Id" type="hidden" />
													<label asp-for="posicao.Nome" style="font-weight:bold;"></label>
													<input type='text' class='form-control' asp-for="posicao.Nome" />
													<span class="alert-danger" asp-validation-for="posicao.Nome"></span>
												</div>
												
												<div class="text-center col-md-12" style="margin-top:35px;">
													<button class="btn btn-primary btn-sx" type="submit">
														<i class="glyphicon glyphicon-edit" style="vertical-align:text-bottom"></i> Editar Posição
													</button>
													<a class="btn btn-success btn-sx" asp-page="/Posicao/Index">
														<i class="glyphicon glyphicon-backward"></i> Lista De Posições
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

