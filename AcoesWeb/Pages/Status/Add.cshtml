@page
@model AcoesWeb.Pages.Status.AddModel
@{
    ViewData["Title"] = "Adicionar Status";
}

<div>
	<div>
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="modal-title"><strong>Novo Status</strong></h3>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-4 item_img img-responsive glyphicon glyphicon-shopping-cart">

					</div>
					<div class="col-md-8 item_content">
						<form method="post">
							<h4>
								<span>Informe os dados do Status!!!</span>
							</h4>
							<div class="container">
								<div class="row">
									<div class="col-md-4">
										<div class="panel">
											<div class="panel-body">
												<div class="col-md-12" style="margin-top:15px;">
													<label asp-for="status.Nome" style="font-weight:bold;"></label>
													<input type='text' class='form-control' asp-for="status.Nome" />
													<span class="alert-danger" asp-validation-for="status.Nome"></span>
												</div>
												
												<div class="text-center col-md-12" style="margin-top:35px;">
													<button class="btn btn-primary btn-sx" type="submit">
														<i class="glyphicon glyphicon-plus"></i> Adicionar Status
													</button>
													<a class="btn btn-success btn-sx" asp-page="/Status/Index">
														<i class="glyphicon glyphicon-backward"></i> Lista de Status
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

