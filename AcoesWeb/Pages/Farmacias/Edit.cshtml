@page
@model AcoesWeb.Pages.Farmacias.EditModel
@{
    ViewData["Title"] = "Editar Farmacia";
}

<div>
	<div>
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="modal-title"><strong>Editar Farmacia</strong></h3>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-4 item_img">
						<img src=" " class="img-responsive">
					</div>
					<div class="col-md-8 item_content">
						<form method="post">
							<h4>
								<span>Atualize os dados da Farmacia !!!</span>
							</h4>
							<div class="container">
								<div class="row">
									<div class="col-md-4">
										<div class="panel">
											<div class="panel-body">
												<div class="col-md-12" style="margin-top:15px;">
													<input asp-for="farmacia.Id" type="hidden" />
													<label asp-for="farmacia.Nome" style="font-weight:bold;"></label>
													<input type='text' class='form-control' asp-for="farmacia.Nome" />
													<span class="alert-danger" asp-validation-for="farmacia.Nome"></span>
												</div>
												<div class="col-md-12" style="margin-top:15px;">
													<label asp-for="farmacia.Local" style="font-weight:bold;"></label>
													<input type='text' class='form-control' asp-for="farmacia.Local" />
													<span class="alert-danger" asp-validation-for="farmacia.Local"></span>
												</div>
												<div class="col-md-12" style="margin-top:15px;">
													<label class="control-label">Associados</label>
													<select asp-for="farmacia.Id_Associado" class="form-control"
															asp-items="@Model.Associados">
														<option value="">-- Selecione Associado --</option>
													</select>
												</div>
												<div class="text-center col-md-12" style="margin-top:35px;">
													<button class="btn btn-primary btn-sx" type="submit">
														<i class="glyphicon glyphicon-edit" style="vertical-align:text-bottom"></i> Editar Farmacia
													</button>
													<a class="btn btn-success btn-sx" asp-page="/Farmacias/Index">
														<i class="glyphicon glyphicon-backward"></i> Lista De Farmacias
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

