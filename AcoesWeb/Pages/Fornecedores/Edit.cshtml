@page
@model AcoesWeb.Pages.Fornecedores.EditModel
@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div>
	<div>
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="modal-title"><strong>Editar Fornecedor</strong></h3>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-4 item_img">
						<img src=" " class="img-responsive">
					</div>
					<div class="col-md-8 item_content">
						<form method="post">
							<h4>
								<span>Atualize os dados do fornecedor !!!</span>
							</h4>
							<div class="container">
								<div class="row">
									<div class="col-md-4">
										<div class="panel">
											<div class="panel-body">
												<div class="col-md-12" style="margin-top:15px;">
													<input asp-for="fornecedor.Id" type="hidden" />
													<label asp-for="fornecedor.Nome" style="font-weight:bold;"></label>
													<input type='text' class='form-control' asp-for="fornecedor.Nome" />
													<span class="alert-danger" asp-validation-for="fornecedor.Nome"></span>
												</div>
												<div class="text-center col-md-12" style="margin-top:35px;">
													<button class="btn btn-primary btn-sx" type="submit">
														<i class="glyphicon glyphicon-edit" style="vertical-align:text-bottom"></i> Editar Fornecedor
													</button>
													<a class="btn btn-success btn-sx" asp-page="/Fornecedores/Index">
														<i class="glyphicon glyphicon-backward"></i> Lista De Fornecedores
													</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

